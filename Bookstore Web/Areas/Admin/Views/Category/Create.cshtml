@model Category
@{
    ViewData["Title"] = "Create Category";
}
<div class="row justify-content-center">
    <div class="col-6">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-secondary bg-gradient m-lg-0 py3">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="text-white py-2">Create Category</h2>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <form method="post" class="row">
                    <div class="border pt-3">
                        <div class="py-2">
                            <input type="text" asp-for="Name" placeholder="Category Name" class="form-control form-floating shadow border-0" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="py-2 mt-3">
                            <input type="text" asp-for="DisplayOrder" placeholder="Display Order" class="form-control form-floating shadow border-0" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                        <div class="row mt-5">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            </div>
                            <div class="col-6">
                                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}