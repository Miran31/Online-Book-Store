
@model List<Category>
@{
    ViewData["title"] = "Category List";
}
<partial name="_Notification" />
<div class="row justify-content-center">
    <div class="col-10">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-secondary bg-gradient m-lg-0 py3">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="text-white py-2">Category List</h2>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="row justify-content-end mb-3">
                    <div class="col-6 text-end">
                        <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary rounded-3">
                            <i class="bi bi-plus-circle"></i> Create new category
                        </a>
                    </div>
                </div>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Display Order
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.OrderBy(u => u.DisplayOrder))
                        {
                            <tr>
                                <td>
                                    @i.Name
                                </td>
                                <td>
                                    @i.DisplayOrder
                                </td>
                                <td>
                                    <div class="row">
                                        <div class="col-6">
                                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@i.ID" class="btn btn-success rounded-5 form-control">
                                                <i class="bi bi-pencil-square"></i>
                                                Edit
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@i.ID" class=" btn btn-danger rounded-5 form-control">
                                                <i class="bi bi-trash-fill"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
