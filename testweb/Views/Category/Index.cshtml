
@model List<Category>
@{
    ViewData["title"] = "Category List";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create new category
            </a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach( var i in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>
                    @i.Name
                </td>
                <td>
                    @i.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>